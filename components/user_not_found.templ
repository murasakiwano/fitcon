package components

templ UserNotFound(id string) {
	<div id="card" class="mx-auto max-w-xl rounded-lg bg-gray-100 p-6 text-center shadow-xl dark:bg-gray-700">
		<h1 class="mb-4 text-2xl font-semibold dark:text-gray-50">Usuário Não Encontrado</h1>
		<p class="mb-6 text-gray-500 dark:text-gray-300">Não conseguimos encontrar um usuário com matrícula { id }. Por favor tente de novo.</p>
		<a hx-get="/home" hx-target="card" class="text-orange-600 hover:underline">Return to Homepage</a>
	</div>
}
